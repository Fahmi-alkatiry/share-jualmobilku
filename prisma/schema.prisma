generator client {
  provider = "prisma-client-js"
}

datasource db {
  
  provider = "mysql"
}

enum CarStatus {
  TERSEDIA
  TERJUAL
}

enum Transmission {
  MANUAL
  AUTOMATIC
}

model Car {
  id              String       @id @default(cuid())
  brand           String
  model           String
  year            Int
  price           Float        
  mileage         Int
  transmission    Transmission
  color           String
  licensePlate    String       @unique
  taxExpiry       DateTime
  stnkOwnership   String
  description     String?      @db.Text
  status          CarStatus    @default(TERSEDIA)
  images          String[]     
  video           String?      
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([brand, model, status, price])
}
